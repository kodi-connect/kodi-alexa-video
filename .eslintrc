{
  "extends": [
    "eslint-config-airbnb-base"
  ],
  "plugins": ["jest"],
  "env": {
    "node": true
  },
  "rules": {
    "max-len": [1, 160],
    "no-console": 0,
    "no-restricted-syntax": 0,
    "no-await-in-loop": 0
  },
  "overrides": [
    {
      "files": [
        "tests/*.spec.js",
        "tests/util.js"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}
